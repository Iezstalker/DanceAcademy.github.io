extends base.pug

block scripts 
    script(src='/static/index.js')

block style 
    style 
        include ../static/style.css    
        include ../static/stylecontact.css    


block content
    div.container
        h1 Contact Us
        form(action="contact", method="post", class="myForm")
            input(type="text", class="myInput", id="name", placeholder="Enter your name")
            input(type="text", class="myInput", id="age", placeholder="Enter your age")
            input(type="text", class="myInput", id="phone", placeholder="Enter your phone")
            input(type="text", class="myInput", id="email", placeholder="Enter your email")
            input(type="text", class="myInput", id="desc", placeholder="Enter your concern")
            button(class="btn") Submit